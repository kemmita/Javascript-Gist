
//in order to generate random numbers we need only to assign the variable to Math.random and if you wanted to round the number simply use
math.round
var x = Math.round(Math.random()*10);
window.alert("this is a random number being generated by Javascript " + x);

//as you can see below several variables can be declared at once on the smae line and use math.round and math.random to assign the value 
of the variables.
document.getElementById("button2").ondblclick = function (){
    var a, b, c;
    a = Math.round(Math.random()*10);
    b = Math.round(Math.random()*10);
    c = Math.round(Math.random()*10);
    

}
