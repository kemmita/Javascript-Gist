  function initMap() {
        var map = new 
        google.maps.Map(document.getElementById('map'), {
          zoom: 12,
          center: {lat:48.516054, lng:11.481216}
          
        });
//to create a box that appears on click, create a variable called content, we will place our message here in html format
var content = "<div><p>Hello</p></div>";
//next create the infowindow and reference the content vairable from above
 var infoWindow = new google.maps.InfoWindow({
          content: content,
          maxWidth: 200
           });
//markers
        var marker1 = new google.maps.Marker({
          position: {lat:48.516054, lng:11.481216},
          map: map,
          title: "this is compton",
          draggable: true,
          animation: google.maps.Animation.DROP
        });
        var marker2 = new google.maps.Marker({
          position: {lat:48.546054, lng:11.481216},
          map: map,
          title: "this is China",
          draggable: true,
          animation: google.maps.Animation.BOUNCE
        });
//now we will create a listener 
      marker1.addListener("click", function(){
     //we reference the info window we created on line 11 and use the open function and supply it with our map and the marker we wih to
     //attach the message to.
                    infoWindow.open(map, marker1);      
                          });
      
      
      
      }
