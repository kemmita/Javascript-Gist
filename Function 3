JS*******************************************

function calcAge() {
 var age = document.getElementById("age").value;
     if(age < 3){
        document.getElementById("mypar").innerHTML = ("Categorize as infant");
    }
    else if (age >= 3 && age <6){
        document.getElementById("mypar").innerHTML = ("Categorize as toddler");
    }
    else if (age >= 6 && age == 12){
        document.getElementById("mypar").innerHTML = ("Categorize as Child");
    }
    else if (age >= 13 && age < 18){
        document.getElementById("mypar").innerHTML = ("Categorize as Teenager");
    }
    else if (age >= 18 && age < 60){
        document.getElementById("mypar").innerHTML = ("Categorize as Adult");
    }
    else if (age >= 60){
        document.getElementById("mypar").innerHTML = ("Categorize as Senior");
    }
             
             
    
}
